model Post {
  id         String     @id @default(uuid())
  title      String     @db.VarChar(255)
  content    String     @db.Text
  thumbnail  String?
  isFeatured Boolean    @default(false)
  status     postStatus @default(PUBLISHED)
  tags       String[]
  views      Int        @default(0)
  authorId   String
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  comments   Comment[]
  //it changes the table name to "posts" instead of default "Post"
  @@index([authorId])
  @@map("posts")
}
enum postStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}